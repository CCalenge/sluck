<!DOCTYPE html>
<html>
<!-- recover current user -->
<% currentUser=locals.currentUser.pseudo %>
    <% listeUsers=locals.usersSorted %>

        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Sluck</title>
            <link rel="stylesheet" href="/css/sluck.css" media="screen" title="no title" charset="utf-8">
            <link href='https://fonts.googleapis.com/css?family=Roboto:400,600' rel='stylesheet' type='text/css'>
        </head>

        <body>
            <section id="containerChangeUser" class="shadow">
                <img src="images/fermeture.svg" class="closeModal" />
                <p>
                    <label class="label">Modifier votre pseudo :</label>
                    <input class="pseudoInput" />
                </p>

                <p>
                    <p>Pour changer de password,</p>
                    <label class="label">Veuillez confirmer votre mot de passe:</label>
                    <input type="password" class="passwd"/><span class="error">erreur de saisie</span>
                </p>
                <p>
                    <label class="label">Nouveau mot de passe :</label>
                    <input type="password" class="newPasswd" placeholder="min 6 caractères"/><span class="error">6 caractères min</span>
                </p>
                <p>
                    <label class="label">Veuillez confirmer votre nouveau mot de passe :</label>
                    <input type="password"class="checkNewPasswd" placeholder="min 6 caractères"/><span class="error">erreur de saisie</span>
                </p>
                <button type="button" class="submitChangeUser">modifier</button>

            </div>
            </section>

            <div class="header shadow">
                <img src="images/avatar.png" id="iconeUser" />
                <p id="currentUser">
                    <%= currentUser %>
                </p>
            </div>

            <div class="mainContainer">

                <aside class="leftContainer">

                    <ul class="onlineUsers">
                        <% for(i=0 , c= listeUsers[0].length; i<c; i++){%>
                            <li id="user<%= listeUsers[0][i].id %>">
                                <%= listeUsers[0][i].pseudo %>
                            </li>
                            <%}%>
                    </ul>
                    <ul class="offlineUsers">
                        <% for(i=0 , c= listeUsers[1].length; i<c; i++){%>
                            <li id="user<%= listeUsers[1][i].id %>">
                                <%= listeUsers[1][i].pseudo %>
                            </li>
                            <%}%>
                    </ul>
                </aside>

                <section class="rightContainer">
                    <div id="messageContainer">

                    </div>

            <div class="formMessage shadow">
                <p class="alert shadow">merci de poster un message !</p>
                <button type="button" class="submitMessage">+</button>
                <textarea name="message" id="message"></textarea>
            </div>
            </section>

            </div>

            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
            <script src="socket.io/socket.io.js"></script>
            <script src="/js/sluck.js"></script>
        </body>

</html>
